.item-container {
  margin: 20rpx 4rpx;
  box-shadow: 0px 0px 10px #b6afaf;
  border-radius: 20rpx;
}
.item-container .rankTitle {
  text-align: center;
  font-weight: 600;
  padding-top: 10rpx;
  box-sizing: border-box;
}
.item-container .item-ranks {
  margin-top: 20rpx;
  overflow: hidden;
}
.item-container .item-ranks .list {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15rpx 15rpx;
}
.item-container .item-ranks .list .picCover {
  width: 100rpx;
  height: 100rpx;
  flex-grow: 0;
  flex-shrink: 0;
}
.item-container .item-ranks .list .picCover .img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.item-container .item-ranks .list .list-desc {
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}
.item-container .item-ranks .list .list-desc .descItem {
  padding-left: 20rpx;
  font-size: 28rpx;
}
.item-container .item-ranks .list .list-desc .rankNum {
  font-weight: 600;
}
.item-container .item-ranks .list .list-desc .rankWords {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 40vw;
}
.item-container .item-ranks .list .list-desc .author {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 15vw;
}
