/* pages/profile/profile.wxss */
.profile {
  width: 100vw;
}
.profile .container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.profile .container .userInfo {
  position: relative;
  width: 100%;
  height: 50vh;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  display: flex;
}
/* 背景图蒙层 */
.profile .container .userInfo::after {
  content: '';
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .3);
}
.userInfo .left {
  padding-left: 40rpx;
  box-sizing: border-box;
  z-index: 100;
  color: #fff;
  margin-top: 100rpx;
  text-align: left;
}
.left .avatar {
  width: 120rpx;
  height: 120rpx;
}
.avatar .userAvatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.left .name {
  font-size: 32rpx;
  /* font-weight: 600; */
  margin-top: 20rpx;
}
.left .fans {
  font-size: 22rpx;
  color: #ddd;
  margin-top: 10rpx;
}
.left .fans .desc {
  padding: 0 20rpx;
}
.left .fans :first-child {
  padding-left: 0;
}
.left .more {
  display: flex;
  font-size: 20rpx;
  margin-top: 20rpx;
  justify-content: start;
  align-items: center;
}
.left .more .more-item {
  margin-right: 6rpx;
  border-radius: 40rpx;
  box-sizing: border-box;
}
.left .more .vip {
  background: #000;
  padding: 4rpx 10rpx;
}
.left .more .age {
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.left .more .female {
  background: rgba(255, 192, 203, 0.5);
}
.left .more .male {
  background: rgba(25, 137, 250, 0.5);
}
.left .more .rank {
  background: rgba(255, 255, 255, 0.4);
  padding: 4rpx 16rpx;
}
.userInfo .right {
  z-index: 100;
  position: absolute;
  right: 20rpx;
  bottom: 160rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
}
.userInfo .right .handle {
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  box-sizing: border-box;
  border-radius: 40rpx;
  margin-right: 10rpx;
}
/* 主页/动态 */
.container .dynamic-container {
  margin-top: -34rpx;
  border-radius: 40rpx;
  overflow: hidden;
}
/* 主页 ——> 听歌排行 */
.container .dynamic-container .tab-home-container {
  padding-left: 40rpx;
}
.container .dynamic-container .tab.home .likedSongs{
  display: flex;
  flex-direction: column;
}
.likedSongs .item {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.likedSongs .item .icon {
  width: 100rpx;
  height: 100rpx;
}
.likedSongs .item .icon .img {
  width: 100%;
  height: 100%;
}
.likedSongs .item .title-container {
  margin-left: 30rpx;
}
.likedSongs .item .title-container .title {
  font-size: 28rpx;
}
.likedSongs .item .title-container .numbers {
  font-size: 24rpx;
  color: #999;
}
.dynamic-container .tab.home .radio-container {
  margin: 30rpx 0 0 0;
}
.dynamic-container .tab.home .radio-container {
  display: flex;
  flex-direction: column;
}
.dynamic-container .tab.home .radio-container .title-container .title {
  font-size: 34rpx;
  font-weight: 600;
}
.dynamic-container .tab.home .radio-container .title-container .numbers {
  font-size: 24rpx;
  color: #999;
}
.dynamic-container .tab.home .radio-container .detail {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.dynamic-container .tab.home .radio-container .detail .radio-cover {
  width: 100rpx;
  height: 100rpx;
}
.dynamic-container .tab.home .radio-container .detail .radio-cover .img {
  width: 100%;
  height: 100%;
}
.dynamic-container .tab.home .radio-container .detail .desc {
  margin-left: 30rpx;
}
.dynamic-container .tab.home .radio-container .detail .desc .radioName .category {
  display: inline-block;
  border: 1px solid #ee0a24;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #ee0a24;
}
.dynamic-container .tab.home .radio-container .detail .desc .radioName .name {
  font-size: 28rpx;
  margin-left: 10rpx;
}
.dynamic-container .tab.home .radio-container .detail .desc .subs {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
