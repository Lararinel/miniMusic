.header {
  margin-top: 16rpx;
}
.header .subTitle {
  font-size: 12px;
  color: #888;
  display: block;
}
.header .title {
  font-size: 18px;
  font-weight: 600;
}
.header .title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .title-bar button {
  background-color: #FFF;
  border: 1px soild #000;
  margin: 0;
  font-size: 20rpx;
}
.header .title-bar button::after {
  border-radius: 90rpx;
}
.container swiper {
  height: 400rpx;
}
.container view.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 16rpx;
}
.container view.item image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 16rpx;
  border-radius: 8rpx;
  position: relative;
}
.container view.item image::before {
  content: 'â–¶';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 20px;
  color: rgba(255, 255, 255, 0.5);
}
.container view.item .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.container view.item .info .title-wrap {
  display: flex;
  align-items: center;
}
.container view.item .info .title-wrap text {
  display: inline;
}
.container view.item .info .title-wrap .title {
  margin-right: 12rpx;
}
.container view.item .info .title-wrap .name {
  font-size: 20rpx;
  color: #666;
}
.container view.item .info .subtitle {
  display: block;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #444;
}
