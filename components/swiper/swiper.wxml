<!--components/swiper/swiper.wxml-->
<swiper 
  indicator-dots 
  indicator-active-color="#f55777" 
  autoplay 
  circular 
  interval="3000"
  class="swiper">
  <block wx:for="{{images}}" wx:key="index">
    <swiper-item>
      <image src="{{item}}" class="swiper-image" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
